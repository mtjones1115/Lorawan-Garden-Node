#include <Arduino.h>
#include <SPI.h>
#include <Adafruit_Sensor.h>
#include <Adafruit_BME280.h>

#define BME_SCK 18 //10
#define BME_MISO 19 //12
#define BME_MOSI 16 //11
#define BME_CS 17 //13

Adafruit_BME280 bme; // hardware SPI

int sensor1 = 26; 
int dry_val = 686; 
int wet_val = 319; 

void setup() {
  Serial.begin(9600); 
  pinMode(sensor1, INPUT); 

  SPI.begin();
  // bme.begin(0x76);
  if (!bme.begin(0x76)) {
    Serial.println("Could not find a valid BME280 sensor, check wiring!");
    while (1);
  }
  delay(2000);
}

void loop() {
  // int moisture1 = analogRead(sensor1);  
  // int percentage1 = map(moisture1, dry_val, wet_val, 0, 100); 

  // Serial.print("Moisture Percentage:");
  // Serial.println(percentage1);
  // Serial.print("\t");
  // Serial.print("Moisture raw value:");
  // Serial.print(moisture1);
  // Serial.print("\t\t");
  // Serial.println();

  SPI.beginTransaction(SPISettings(1000000, MSBFIRST, SPI_MODE3)); // Set SPI speed to 1MHz
  digitalWrite(BME_CS, LOW); 

  Serial.print("Temperature = ");
  Serial.print(bme.readTemperature());
  Serial.println(" *C");

  Serial.print("Pressure = ");
  Serial.print(bme.readPressure() / 100.0F);
  Serial.println(" hPa");

  Serial.print("Humidity = ");
  Serial.print(bme.readHumidity());
  Serial.println(" %");

  digitalWrite(BME_CS, HIGH);
  SPI.endTransaction();

  delay(500); 
// Serial.println("Hello!");
}